<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#424242"
    android:fitsSystemWindows="true">


    <android.support.v7.widget.Toolbar
       android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="#FFFF">
    </android.support.v7.widget.Toolbar>

        <com.github.anastr.speedviewlib.PointerSpeedometer
            android:id="@+id/pointerSpeedometer"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            app:sv_backgroundCircleColor="#424242"
            app:sv_speedometerColor="#FFF"
            app:sv_tickNumber="5" />

        <com.jjoe64.graphview.GraphView
            android:id="@+id/graph"
            android:layout_width="400dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="370dp"

             />

        <Button
            android:id="@+id/btnStart"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="0dp"
            android:background="#1ee45f"
            android:text="START POMIARU"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/btnStop"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:background="#e41e40"
            android:text="STOP"
            android:textColor="@android:color/white" />


    <TextView
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="500dp"
        android:text="Dystans całkowity:"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:textStyle="bold" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/distance"
            android:layout_marginStart="500dp"
            android:text="Czas:"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

    <TextView
        android:id="@+id/speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnStart"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="688dp"
        android:text="Prędkość:"
        android:textColor="@android:color/white"
        android:textSize="20sp" />


        <Button
            android:id="@+id/btnPause"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="56dp"
            android:background="#36454F"
            android:text="WSTRZYMAJ"
            android:textColor="@android:color/white" />





    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="600dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="100dp"
        android:text="Zapis CSV" />


    <TextView
        android:id="@+id/wskaznik1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"

        android:layout_marginTop="90dp"
        android:text="TextView"
        android:textColor="@android:color/white"
        android:textSize="30sp" />


</RelativeLayout>
