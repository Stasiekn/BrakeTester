<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#424242"
    android:fitsSystemWindows="true">


    <TextView
        android:id="@+id/textPolecenie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="630dp"
        android:fontFamily="@font/font"
        android:text="PROSZĘ UZUPEŁNIĆ WSZYSTKIE POLA"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editMarkaOpon"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="226dp"
        android:layout_marginTop="206dp"
        android:background="#FFF"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="Model i Marka"
        android:textColor="#000" />

    <EditText
        android:id="@+id/editCisnienie"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="226dp"
        android:layout_marginTop="241dp"
        android:background="#FFF"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="Ciśnienie"
        android:textColor="#000" />

    <EditText
        android:id="@+id/editMiejsce"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="226dp"
        android:layout_marginTop="276dp"
        android:background="#FFF"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="Miejsce"
        android:textColor="#000" />

    <TextView
        android:id="@+id/textABSON"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="314dp"
        android:fontFamily="@font/font"
        android:text="Czy ABS jest aktywny:"
        android:textColor="@android:color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textMiejsce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="279dp"
        android:fontFamily="@font/font"
        android:text="Miejsce testu:"
        android:textColor="@android:color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textCisOpony"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="244dp"
        android:fontFamily="@font/font"
        android:text="Ciśnienie w oponach:"
        android:textColor="@android:color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textMarkaOpony"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="209dp"
        android:fontFamily="@font/font"
        android:text="Marka opon:"
        android:textColor="@android:color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textRodzOpony"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="174dp"
        android:fontFamily="@font/font"
        android:text="Rodzaj opon:"
        android:textColor="@android:color/white"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/editMarka"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="226dp"
        android:layout_marginTop="136dp"
        android:background="#FFF"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="Model i Marka"
        android:textColor="#000" />

    <TextView
        android:id="@+id/textMarka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="139dp"
        android:fontFamily="@font/font"
        android:text="Marka i model auta:"
        android:textColor="@android:color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/testInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="104dp"
        android:fontFamily="@font/font"
        android:text="Imię i nazwisko testującego:"
        android:textColor="@android:color/white"
        android:textSize="15sp" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="#FFFF">
    </android.support.v7.widget.Toolbar>

    <Button
        android:id="@+id/btnCofnij"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="0dp"
        android:background="#36426d"
        android:text="Cofnij"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/TestInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="61dp"
        android:text="Informacje o teście:"
        android:fontFamily="@font/font"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/TestInfo"
        android:layout_alignParentTop="true"
        android:layout_marginTop="311dp"
        android:layout_marginEnd="-212dp"
        android:textColor="#FFF"
        android:text="NIE / TAK  " />

    <Spinner
        android:id="@+id/spinnerRodzOpon"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_marginStart="226dp"
        android:layout_marginTop="171dp"
        android:entries="@array/rodzajOpon"
         />

    <EditText
        android:id="@+id/editImie"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="226dp"
        android:layout_marginTop="101dp"
        android:background="#FFF"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="Imię i Nazwisko"
        android:textColor="#000" />

    <Button
        android:id="@+id/ButtonSendFeedback"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="210dp"
        android:layout_marginBottom="0dp"
        android:background="#36426d"
        android:onClick="sendFeedback"
        android:text="ZAPISZ"
        android:textColor="#FFF"></Button>


</RelativeLayout>


